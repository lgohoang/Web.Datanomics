@model System.Collections.Generic.List<Web.Datanomics.Models.Article>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
    <div class="panel panel-dark margin-bottom-40">
        <div class="panel-heading">
            <h3 class="panel-title">
                Article
                <a class="pull-right" href="@Url.Action("Create","Article")">
                    <i class="fa fa-plus"></i>
                </a>
            </h3>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Article Name</th>
                    <th>Categories Name</th>
                    <th>Create Time</th>
                    <th>User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].ID)
                        </td>
                        <td>
                            <a href="@Url.Action("Post","View", new { @ID = Model[i].ID})">
                                @Html.DisplayFor(modelItem => Model[i].Title)
                            </a>
                        </td>
                        <td>
                            @Html.Action("GetCategoryName", "Categories", new { @id = Model[i].CategoryID })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].CreateTime)
                        </td>
                        <td>
                            @Html.Action("GetFullName", "User", new { @id = Model[i].UserID })
                        </td>
                        <td>
                            <a class="btn btn-xs" href="@Url.Action("Edit", "Article", new { id = Model[i].ID })"><i class="fa fa-edit"></i> Edit</a>
                            <a class="btn btn-danger btn-xs" href="@Url.Action("Delete", "Article", new { id = Model[i].ID })"><i class="fa fa-trash-o"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
